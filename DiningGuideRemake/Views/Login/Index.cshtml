@model DiningGuideRemake.Models.User
@{
    ViewData["Title"] = "Login page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="register-login" class="login">
    <div class="form-container">
        <div class="image-holder"></div>
        <form asp-action="Login">
            <h2 class="text-center"><strong>Login</strong> to yours account.</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login to account" class="btn btn-primary" />
                @if (ViewData["Error"] != null)
                {
                    <span class="badge badge-danger">@ViewData["Error"]</span>
                }
            </div>
            <a class="already" asp-area="" asp-controller="Register" asp-action="Index">Don&#39;t have an account? Sign Up here.</a>
        </form>
    </div>
</div>
